<% include ./partials/header %>

<div class="ui center aligned grid">
  <div id="register" class="column">
    <h2 class="ui red header">Create an account</h2>

    <form class="ui large form" action="/register" method="post">
      <div class="field">
        <div class="ui left icon input">
          <i class="user icon"></i>
          <input type="text" name="username" placeholder="Username">
        </div>
      </div>
      <div class="field">
        <div class="ui left icon input">
          <i class="lock icon"></i>
          <input type="password" name="password" placeholder="Password">
        </div>
      </div>
      <button class="ui fluid large red submit button" type="submit">Create Account</button>
      <div class="ui error message"></div>
    </form>
  </div>
</div>

<% include ./partials/footer %>